class Solution {
    public int[] sumZero(int n) {
        int[] result=new int[n];
        int left = 0;
        int right=n-1;
        int num=1;

        while(left<right){
            result[left]=num;
            result[right]=-num;
            num++;
            left++;
            right--;
        }
        if(n%2 !=0){
            result[left]=0;
        }
        return result;
    }
}
